@{
    ViewData["Title"] = "About Us";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold text-primary mb-3">About CarRental Pro</h1>
            <p class="lead text-muted">Your trusted partner in premium car rental services since 2010</p>
        </div>
    </div>

    <div class="row align-items-center mb-5">
        <div class="col-lg-6">
            <img src="https://images.pexels.com/photos/1545743/pexels-photo-1545743.jpeg?auto=compress&cs=tinysrgb&w=800" 
                 class="img-fluid rounded shadow" alt="Our Fleet">
        </div>
        <div class="col-lg-6">
            <h2 class="h1 fw-bold mb-4">Our Story</h2>
            <p class="text-muted mb-4">
                Founded in 2010, CarRental Pro has been serving customers with premium car rental services for over a decade. 
                What started as a small local business has grown into a trusted name in the car rental industry, serving 
                thousands of satisfied customers across the region.
            </p>
            <p class="text-muted mb-4">
                We pride ourselves on maintaining a modern fleet of well-maintained vehicles, providing exceptional customer 
                service, and offering competitive rates without compromising on quality or safety.
            </p>
            <div class="row text-center">
                <div class="col-4">
                    <h3 class="text-primary fw-bold">500+</h3>
                    <small class="text-muted">Vehicles</small>
                </div>
                <div class="col-4">
                    <h3 class="text-primary fw-bold">50K+</h3>
                    <small class="text-muted">Happy Customers</small>
                </div>
                <div class="col-4">
                    <h3 class="text-primary fw-bold">15+</h3>
                    <small class="text-muted">Years Experience</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12 text-center mb-5">
            <h2 class="h1 fw-bold text-primary mb-3">Our Mission</h2>
            <p class="lead text-muted">To provide reliable, affordable, and premium car rental services that exceed customer expectations</p>
        </div>
        
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body p-4">
                    <div class="text-primary mb-3">
                        <i class="bi bi-award" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Quality Assurance</h5>
                    <p class="card-text text-muted">Every vehicle in our fleet undergoes rigorous quality checks and regular maintenance to ensure optimal performance and safety.</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body p-4">
                    <div class="text-primary mb-3">
                        <i class="bi bi-people" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Customer First</h5>
                    <p class="card-text text-muted">Our dedicated customer service team is committed to providing exceptional support and ensuring your rental experience is seamless.</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body p-4">
                    <div class="text-primary mb-3">
                        <i class="bi bi-gear" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Innovation</h5>
                    <p class="card-text text-muted">We continuously invest in technology and processes to make car rental more convenient and efficient for our customers.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row align-items-center">
        <div class="col-lg-6 order-lg-2">
            <img src="https://images.pexels.com/photos/627678/pexels-photo-627678.jpeg?auto=compress&cs=tinysrgb&w=800" 
                 class="img-fluid rounded shadow" alt="Customer Service">
        </div>
        <div class="col-lg-6 order-lg-1">
            <h2 class="h1 fw-bold mb-4">Why Choose Us?</h2>
            <ul class="list-unstyled">
                <li class="mb-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-1">Extensive Fleet</h6>
                            <small class="text-muted">From economy cars to luxury vehicles, we have the perfect car for every need.</small>
                        </div>
                    </div>
                </li>
                <li class="mb-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-1">Competitive Pricing</h6>
                            <small class="text-muted">Transparent pricing with no hidden fees and flexible rental packages.</small>
                        </div>
                    </div>
                </li>
                <li class="mb-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-1">24/7 Support</h6>
                            <small class="text-muted">Round-the-clock customer support for assistance whenever you need it.</small>
                        </div>
                    </div>
                </li>
                <li class="mb-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-1">Easy Booking</h6>
                            <small class="text-muted">Simple online booking process with instant confirmation and flexible modifications.</small>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="bg-primary text-white py-5 mt-5">
    <div class="container text-center">
        <h2 class="h1 fw-bold mb-3">Ready to Experience the Difference?</h2>
        <p class="lead mb-4">Join thousands of satisfied customers who choose CarRental Pro for their transportation needs.</p>
        <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
            <a class="btn btn-light btn-lg" asp-controller="Home" asp-action="Vehicles">
                <i class="bi bi-car-front me-2"></i>Browse Our Fleet
            </a>
            <a class="btn btn-outline-light btn-lg" asp-controller="Account" asp-action="Register">
                <i class="bi bi-person-plus me-2"></i>Get Started Today
            </a>
        </div>
    </div>
</div>