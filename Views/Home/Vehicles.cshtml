@model IEnumerable<CarRentalSystemSeparation.Areas.Vehicle.DTOs.VehicleListDTO>
@{
    ViewData["Title"] = "Our Vehicles";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold text-primary mb-3">Our Vehicle Fleet</h1>
            <p class="lead text-muted">Discover our extensive collection of quality vehicles for every occasion</p>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Filter by Type</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="@Url.Action("Vehicles", "Home")" class="btn btn-outline-primary">
                            <i class="bi bi-collection me-1"></i>All Types
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-car-front me-1"></i>Sedan
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-truck me-1"></i>SUV
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-car-front me-1"></i>Hatchback
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-car-front me-1"></i>Convertible
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vehicles Grid -->
    <div class="row">
        @foreach (var vehicle in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card vehicle-card h-100 shadow-sm">
                    <img src="@vehicle.ImageUrl" class="card-img-top" alt="@vehicle.DisplayName">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@vehicle.DisplayName</h5>
                        <div class="mb-2">
                            <span class="badge bg-secondary mb-1">
                                <i class="bi bi-tag me-1"></i>@vehicle.Type
                            </span>
                            <span class="badge bg-@(vehicle.Status == CarRentalSystemSeparation.Common.Enums.VehicleStatus.Available ? "success" : "warning")">
                                <i class="bi bi-circle-fill me-1"></i>@vehicle.Status
                            </span>
                        </div>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h4 text-primary mb-0 fw-bold">$@vehicle.PricePerDay/day</span>
                                <div class="btn-group">
                                    <a href="@Url.Action("VehicleDetails", "Home", new { id = vehicle.Id })" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye me-1"></i>Details
                                    </a>
                                    @if (vehicle.Status == CarRentalSystemSeparation.Common.Enums.VehicleStatus.Available)
                                    {
                                        <a href="#" class="btn btn-primary btn-sm">
                                            <i class="bi bi-calendar-check me-1"></i>Book Now
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            <i class="bi bi-x-circle me-1"></i>Unavailable
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12 text-center py-5">
                <div class="text-muted">
                    <i class="bi bi-car-front" style="font-size: 4rem;"></i>
                    <h3 class="mt-3">No vehicles available</h3>
                    <p>Please check back later or contact us for more information.</p>
                </div>
            </div>
        </div>
    }
</div>