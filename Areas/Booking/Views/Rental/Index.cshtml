@model IEnumerable<CarRentalSystemSeparation.Areas.Booking.DTOs.RentalListDTO>
@{
    ViewData["Title"] = "Active Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-primary mb-2">Active Rentals</h1>
            <p class="text-muted">Manage ongoing vehicle rentals</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var rental in Model)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card rental-card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title">@rental.VehicleName</h5>
                                    <p class="text-muted mb-1">Customer: @rental.CustomerName</p>
                                    <small class="text-muted">Booking #@rental.BookingId</small>
                                </div>
                                <span class="badge bg-@(GetStatusBadgeClass(rental.Status)) fs-6">
                                    @rental.Status
                                </span>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Pickup Date</small>
                                    <strong>@rental.ActualPickupDate.ToString("MMM dd, yyyy")</strong>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Return Date</small>
                                    <strong>
                                        @if (rental.ActualReturnDate.HasValue)
                                        {
                                            @rental.ActualReturnDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-warning">Ongoing</span>
                                        }
                                    </strong>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h6 text-success mb-0">$@rental.ActualAmount</span>
                                <div class="btn-group">
                                    <a href="@Url.Action("Details", new { id = rental.Id })" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye me-1"></i>Details
                                    </a>
                                    @if (rental.Status == CarRentalSystemSeparation.Common.Enums.RentalStatus.Active)
                                    {
                                        <button type="button" class="btn btn-success btn-sm" 
                                                onclick="completeRental(@rental.Id)">
                                            <i class="bi bi-check-circle me-1"></i>Complete
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                    <h3 class="mt-3 text-muted">No active rentals</h3>
                    <p class="text-muted">There are currently no active vehicle rentals.</p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Complete Rental Modal -->
<div class="modal fade" id="completeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Complete Rental</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="completeForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>Mark this rental as completed?</p>
                    <div class="mb-3">
                        <label for="returnNotes" class="form-label">Return Notes (Optional)</label>
                        <textarea name="returnNotes" id="returnNotes" class="form-control" rows="3" 
                                  placeholder="Any notes about the vehicle return..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i>Complete Rental
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(CarRentalSystemSeparation.Common.Enums.RentalStatus status)
    {
        return status switch
        {
            CarRentalSystemSeparation.Common.Enums.RentalStatus.Active => "success",
            CarRentalSystemSeparation.Common.Enums.RentalStatus.Completed => "info",
            CarRentalSystemSeparation.Common.Enums.RentalStatus.Cancelled => "danger",
            _ => "secondary"
        };
    }
}

<script>
    function completeRental(rentalId) {
        const modal = new bootstrap.Modal(document.getElementById('completeModal'));
        const form = document.getElementById('completeForm');
        form.action = '@Url.Action("Complete")/' + rentalId;
        modal.show();
    }
</script>